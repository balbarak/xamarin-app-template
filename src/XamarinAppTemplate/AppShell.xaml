<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:XamarinAppTemplate.Resx"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:XamarinAppTemplate.Views"
    xmlns:vm="clr-namespace:XamarinAppTemplate.ViewModels"
    xmlns:all="clr-namespace:XamarinAppTemplate"
    FlowDirection="{Binding FlowDirection}"
    FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{DynamicResource FlyoutBackgroundColor}"
    x:Name="mainShell"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="XamarinAppTemplate"
    x:Class="XamarinAppTemplate.AppShell">



    <Shell.Resources>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{DynamicResource NavigationBarColor}" />
            <Setter Property="BarTextColor" Value="{DynamicResource SecondaryColor}" />
        </Style>

        <Style TargetType="ShellContent">
            <Setter Property="Shell.BackgroundColor" Value="{DynamicResource NavigationBarBackgroundColor}" />
            <Setter Property="Shell.ForegroundColor" Value="{DynamicResource NavigationBarColor}" />

            <!--<Setter Property="Shell.TitleColor" Value="{DynamicResource NavigationBarColor}" />-->

            <Setter Property="Shell.NavBarHasShadow" Value="False" />

            <!--  Tabs Style  -->
            <Setter Property="Shell.TitleColor" Value="{DynamicResource FlyoutItemSelectedColor}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource NavigationBarColor}" />
            <Setter Property="Shell.TabBarBackgroundColor" Value="{DynamicResource FlyoutBackgroundColor}" />
            <Setter Property="Shell.TabBarForegroundColor" Value="Red" />

        </Style>

        <Style
            x:Key="FlyoutItemStyle"
            TargetType="all:ShellItemGrid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{DynamicResource FlyoutBackgroundColor}" />
                                <Setter Property="IsSelected" Value="False" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{DynamicResource FlyoutItemSelectedBackgroundColor}" />
                                <Setter Property="IsSelected" Value="True" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </Shell.Resources>

    <Shell.BindingContext>
        <vm:AppShellViewModel />
    </Shell.BindingContext>


    <FlyoutItem
        Route="theme"
        Title="{x:Static res:AppResource.Themes}">
        <ShellContent
            Title="Theme"
            ContentTemplate="{DataTemplate local:ThemePage}" />
    </FlyoutItem>


    <FlyoutItem Title="Tabs">
        <ShellContent
            Title="Theme"
            Icon="{Binding Source={x:Static all:SvgIcons.FILE}, Converter={StaticResource IconToSvg}}"
            ContentTemplate="{DataTemplate local:ThemePage}" />
        <ShellContent
            Title="{x:Static res:AppResource.Controls}"
            Icon="{Binding Source={x:Static all:SvgIcons.COGS}, Converter={StaticResource IconToSvg}}"
            ContentTemplate="{DataTemplate local:ControlPage}" />
        <ShellContent
            Title="{x:Static res:AppResource.Countries}"
            Icon="{Binding Source={x:Static all:SvgIcons.LIST}, Converter={StaticResource IconToSvg}}"
            ContentTemplate="{DataTemplate local:CountryPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="controls"
        Title="{x:Static res:AppResource.Controls}">
        <ShellContent
            Title="{x:Static res:AppResource.Controls}"
            ContentTemplate="{DataTemplate local:ControlPage}" />
    </FlyoutItem>



    <FlyoutItem
        Route="settings"
        Title="{x:Static res:AppResource.Settings}">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>


    <FlyoutItem
        Route="country"
        Title="{x:Static res:AppResource.Countries}">
        <ShellContent
            Title="{x:Static res:AppResource.Countries}"
            ContentTemplate="{DataTemplate local:CountryPage}" />
    </FlyoutItem>







    <FlyoutItem
        Route="typography"
        Title="Typography">
        <ShellContent
            Title="Typography"
            ContentTemplate="{DataTemplate local:TypographyPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="home"
        Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>



    <FlyoutItem
        Route="register"
        Title="Register">
        <ShellContent ContentTemplate="{DataTemplate local:RegisterPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="login"
        Title="Login">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="about"
        Title="About">
        <ShellContent ContentTemplate="{DataTemplate local:AboutPage}" />
    </FlyoutItem>


    <Shell.FlyoutHeader>
        <Grid
            HeightRequest="200"
            BackgroundColor="#1F1E2E">

            <Label
                Text="XamarinAppTemplate"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center" />
        </Grid>
    </Shell.FlyoutHeader>



    <Shell.ItemTemplate>
        <DataTemplate>
            <all:ShellItemGrid
                x:Name="grid"
                Padding="30,10"
                Style="{StaticResource FlyoutItemStyle}">
                <Label
                    FontSize="Subtitle"
                    TextColor="{DynamicResource FlyoutTextColor}"
                    Text="{Binding Title}">
                    <Label.Triggers>
                        <DataTrigger
                            TargetType="Label"
                            Binding="{Binding Source={x:Reference grid}, Path=IsSelected}"
                            Value="True">
                            <Setter Property="TextColor" Value="{DynamicResource FlyoutItemSelectedColor}" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
            </all:ShellItemGrid>

        </DataTemplate>
    </Shell.ItemTemplate>

</Shell>
