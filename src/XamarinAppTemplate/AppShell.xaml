<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:XamarinAppTemplate.Resx"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:XamarinAppTemplate.Views"
    FlowDirection="{Binding FlowDirection}"
    FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{DynamicResource FlyoutBackgroundColor}"
    x:Name="mainShell"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="XamarinAppTemplate"
    x:Class="XamarinAppTemplate.AppShell">



    <FlyoutItem
        Route="settings"
        Title="{x:Static res:AppResource.Settings}">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="theme"
        Title="Theme">
        <ShellContent
            Title="Theme"
            ContentTemplate="{DataTemplate local:ThemePage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="typography"
        Title="Typography">
        <ShellContent
            Title="Typography"
            ContentTemplate="{DataTemplate local:TypographyPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="home"
        Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="country"
        Title="Countries">
        <ShellContent
            Title="Country"
            ContentTemplate="{DataTemplate local:CountryPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="register"
        Title="Register">
        <ShellContent ContentTemplate="{DataTemplate local:RegisterPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="login"
        Title="Login">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem
        Route="about"
        Title="About">
        <ShellContent ContentTemplate="{DataTemplate local:AboutPage}" />
    </FlyoutItem>


    <Shell.FlyoutHeader>
        <Grid
            HeightRequest="200"
            BackgroundColor="#1F1E2E">

            <Label
                Text="XamarinAppTemplate"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center" />
        </Grid>
    </Shell.FlyoutHeader>


    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid
                x:Name="grid"
                Padding="30,10"
                Style="{StaticResource FlyoutItemStyle}">
                <Label
                    FontSize="Medium"
                    TextColor="{DynamicResource FlyoutTextColor}"
                    Text="{Binding Title}">
                    <Label.Triggers>
                        <DataTrigger
                            TargetType="Label"
                            Binding="{Binding Source={x:Reference grid}, Path=BackgroundColor}"
                            Value="{StaticResource FlyoutItemSelectedBackgroundColor}">
                            <Setter Property="TextColor" Value="{DynamicResource FlyoutItemSelectedColor}" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
            </Grid>

        </DataTemplate>
    </Shell.ItemTemplate>

</Shell>
