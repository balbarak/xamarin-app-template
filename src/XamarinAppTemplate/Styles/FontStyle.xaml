<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Uid="ss"
    x:Class="XamarinAppTemplate.FontStyle">

    <OnPlatform
        x:Key="FA-Solid"
        x:TypeArguments="x:String">
        <On
            Platform="Android"
            Value="fa-solid-900.ttf#Font Awesome 5 Free" />
        <On
            Platform="iOS"
            Value="Font Awesome 5 Free" />

    </OnPlatform>

    <OnPlatform
        x:Key="TajawalFont"
        x:TypeArguments="x:String">
        <On
            Platform="Android"
            Value="Tajawal-Regular.ttf#Tajawal" />
        <On
            Platform="iOS"
            Value="Tajawal" />
    </OnPlatform>

    <Style
        TargetType="Label"
        x:Key="FontIcon-FA-Solid">
        <Setter Property="FontFamily" Value="{StaticResource FA-Solid}" />
        <Setter Property="FontSize" Value="Medium" />
        <Setter Property="TextColor" Value="{DynamicResource BrandColor}" />
    </Style>

    <Style TargetType="FontImageSource">
        <Setter Property="FontFamily" Value="{StaticResource FA-Solid}" />
    </Style>

</ResourceDictionary>
